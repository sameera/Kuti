<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Define common  colors -->
    <Color x:Key="BackgroundColor">#252625</Color>
    <Color x:Key="ForegroundColor">White</Color>
    <Color x:Key="BorderColor">#FF323332</Color>
    <Color x:Key="AscentBackgroundColor">Indigo</Color>
    <Color x:Key="AscentGradientColor">#6c0082</Color>
    <Color x:Key="AscentForegroundColor">White</Color>

    <!-- Add styles for other controls as needed -->

    <LinearGradientBrush x:Key="ListItemSelectedBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource AscentGradientColor}" Offset="0"/>
        <GradientStop Color="{StaticResource AscentBackgroundColor}" Offset="1"/>
    </LinearGradientBrush>
</ResourceDictionary>