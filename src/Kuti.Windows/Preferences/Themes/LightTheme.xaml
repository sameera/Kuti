<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Define common  colors -->
    <Color x:Key="BackgroundColor">#FFFFFF</Color>
    <Color x:Key="ForegroundColor">#000000</Color>
    <Color x:Key="BorderColor">#CCCCCC</Color>
    <Color x:Key="AscentBackgroundColor">RoyalBlue</Color>
    <Color x:Key="AscentForegroundColor">DarkGray</Color>

    <!-- Light Theme -->
    <LinearGradientBrush x:Key="ListItemSelectedBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#993399" Offset="0"/>
        <GradientStop Color="#660066" Offset="1"/>
    </LinearGradientBrush>
</ResourceDictionary>